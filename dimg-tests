  [ "${lines[0]}" = "repository: jvanzyl" ]
  [ "${lines[1]}" = "image: concord-alpine" ]
  [ "${lines[2]}" = "version: 0.0.4" ]
  [ "${lines[3]}" = "Build-args:" ]
  [ "${lines[4]}" = "  gid: 456" ]
  [ "${lines[5]}" = "  group: concord" ]
  [ "${lines[6]}" = "  uid: 456" ]
  [ "${lines[7]}" = "  user: concord" ]
